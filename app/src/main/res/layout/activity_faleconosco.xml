<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.arena.biel.arenacamp.activity.FaleconoscoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NOME"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="25dp"
            android:textSize="20dp"
            android:textColor=" #000"/>


        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/edNomeFaleconoscoId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"
            android:hint="Digite seu nome"
            app:bootstrapSize="md"
            app:bootstrapBrand="info"
            app:roundedCorners="true" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="E-MAIL"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="1dp"
            android:textSize="20dp"
            android:textColor=" #000"/>


        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/edEmailFaleconoscoId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"
            android:hint="Digite seu email"
            app:bootstrapSize="md"
            app:bootstrapBrand="info"
            app:roundedCorners="true" />


        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="TELEFONE"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="1dp"
            android:textSize="20dp"
            android:textColor=" #000"/>


        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/edFoneFaleconoscoId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="1dp"
            android:ems="10"
           android:hint="@string/mascara_hint"
           android:inputType="phone"

            app:bootstrapSize="md"
            app:roundedCorners="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MENSAGEM"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="1dp"
            android:textSize="20dp"
            android:textColor=" #000"/>



        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/edMsgFaleconoscoId"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="top"
            android:layout_marginTop="1dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"

            android:hint="Sua mensagem"
            app:bootstrapSize="xl"
            app:bootstrapBrand="info"
            app:roundedCorners="true" />

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/btEnviarFaleId"
            android:layout_width="185dp"
            android:layout_marginTop="10dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:textColor="#000"
            android:text="@string/enviar"
            app:bootstrapBrand="success"
            app:bootstrapSize="md"
            app:buttonMode="regular"
            app:showOutline="false"
            app:roundedCorners="true" />




    </LinearLayout>




</ScrollView>
